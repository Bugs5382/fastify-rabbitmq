{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "types": ["jest", "node"]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "./__tests__/**/*",
    "./coverage/**/*",
    "./types/**/*",
    "./dist/**/*"
  ]
}